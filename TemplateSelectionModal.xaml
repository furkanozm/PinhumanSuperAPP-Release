<Window x:Class="WebScraper.TemplateSelectionModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şablon Türü Seçimi"
        Height="220"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Margin="20"
            Padding="20"
            Background="White"
            CornerRadius="10"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Lütfen indirmek istediğiniz şablon türünü seçin"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button Content="İşçi Şablonu"
                        Width="140"
                        Height="40"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,5"
                        Click="WorkerTemplate_Click"/>
                <Button Content="Sözleşmeli Personel"
                        Width="160"
                        Height="40"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,5"
                        Click="ContractTemplate_Click"/>
            </StackPanel>

            <Button Content="İptal"
                    Width="100"
                    Height="32"
                    HorizontalAlignment="Center"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Border>
</Window>