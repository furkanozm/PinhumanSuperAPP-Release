<Window x:Class="WebScraper.TemplateUploadModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP Şablonu Seç"
        Height="300"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="ERP Şablon Dosyası"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"/>
            <TextBlock Text="Her ödeme döneminde kullanılacak ERP şablon dosyasını seçin. Dosya, personel eşleştirme sürecinin temelini oluşturur."
                       FontSize="13"
                       Foreground="#6C757D"
                       TextWrapping="Wrap"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtFilePath"
                             Grid.Column="0"
                             Height="32"
                             Margin="0,0,10,0"
                             IsReadOnly="True"
                             Background="#F1F3F5"
                             Foreground="#333"/>

                    <Button Grid.Column="1"
                            x:Name="btnBrowse"
                            Width="130"
                            Height="35"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Click="btnBrowse_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Dosya Seç" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <TextBlock x:Name="txtValidation"
                           Foreground="#D32F2F"
                           FontSize="12"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Width="120"
                    Height="35"
                    Margin="0,15,15,0"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnCancel_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="İptal" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="btnConfirm"
                    Width="130"
                    Height="35"
                    Margin="0,15,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    IsEnabled="False"
                    Click="btnConfirm_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Tamam" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>

