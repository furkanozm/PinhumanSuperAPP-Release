<Window x:Class="WebScraper.HolidayCalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resmi Tatil Takvimi"
        Height="520"
        Width="820"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="480"
        MinWidth="760"
        FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                Padding="20"
                Margin="15"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,20,0">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Text="Yıl" FontSize="12" Foreground="#666"/>
                        <ComboBox x:Name="cmbYears"
                                  Width="100"
                                  Height="32"
                                  SelectionChanged="cmbYears_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Ay" FontSize="12" Foreground="#666"/>
                        <ComboBox x:Name="cmbMonths"
                                  Width="140"
                                  Height="32"
                                  SelectionChanged="cmbMonths_SelectionChanged"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0">
                    <TextBlock Text="Ay Bilgisi"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock x:Name="txtSummary"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333"/>
                </StackPanel>

                <TextBlock Grid.Column="2"
                           x:Name="txtHolidayCount"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#4CAF50"
                           TextAlignment="Right"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="White"
                    Padding="15"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Margin="0,0,15,0">
                <Calendar x:Name="calendarControl"
                          DisplayMode="Month"
                          IsTodayHighlighted="True"
                          Loaded="calendarControl_Loaded"
                          DisplayDateChanged="calendarControl_DisplayDateChanged"/>
            </Border>

            <Border Grid.Column="1"
                    Background="White"
                    Padding="15"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Resmi Tatiller"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#495057"
                               Margin="0,0,0,10"/>

                    <ListView x:Name="lvHolidays"
                              Grid.Row="1"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tarih" Width="110" DisplayMemberBinding="{Binding Date, StringFormat=dd.MM.yyyy}"/>
                                <GridViewColumn Header="Gün" Width="110" DisplayMemberBinding="{Binding DayName}"/>
                                <GridViewColumn Header="Açıklama" Width="220" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Süre" Width="80" DisplayMemberBinding="{Binding DurationText}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="15"
                    Background="Transparent">
            <Button Width="130"
                    Height="40"
                    Margin="0,15,15,0"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnCancel_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="İptal" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Width="160"
                    Height="40"
                    Margin="0,15,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnConfirm_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Seçimi Uygula" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>

