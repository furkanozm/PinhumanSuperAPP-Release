<Window x:Class="WebScraper.JobEntryModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="💼 İşe Giriş Yap"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Fonts/Poppins-Regular.ttf#Poppins"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0"
                   Text="💼 İşe Giriş Yap"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- İçerik -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <TextBlock Text="İşe giriş formu yakında eklenecek..."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"/>
        </Border>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="CancelButton"
                    Content="İptal"
                    Click="CancelButton_Click"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button x:Name="StartButton"
                    Content="Başlat"
                    Click="StartButton_Click"
                    Width="80"
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>




