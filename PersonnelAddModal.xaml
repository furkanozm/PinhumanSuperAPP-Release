<Window x:Class="WebScraper.PersonnelAddModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="👤 Personel Ekle"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Fonts/Poppins-Regular.ttf#Poppins"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0"
                   Text="👤 Personel Ekle"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- İçerik -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Durum Göstergesi -->
                <Border Grid.Row="0"
                        Background="#E3F2FD"
                        BorderBrush="#2196F3"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="StatusIcon"
                                   Text=""
                                   FontSize="24"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="StatusTitle"
                                       Text="Hazırlanıyor..."
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#1565C0"/>
                            <TextBlock x:Name="StatusMessage"
                                       Text="Personel ekleme sayfası açılıyor..."
                                       FontSize="12"
                                       Foreground="#666"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Dosya Bilgisi -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="📄 Seçilen Dosya:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <TextBlock x:Name="txtSelectedFile"
                               Grid.Column="1"
                               Text="Dosya seçilmedi"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="#333"
                               TextWrapping="Wrap"/>
                </Grid>

                <!-- Form Alanı -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="FormPanel" Visibility="Collapsed">
                        <!-- Form içeriği dinamik olarak eklenecek -->
                        <TextBlock Text="Form alanları yükleniyor..."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Log Box -->
        <GroupBox Grid.Row="2"
                  Header="Log Detayları"
                  Margin="0,20,0,0">
            <TextBox x:Name="LogTextBox"
                     Height="300"
                     Background="Black"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
        </GroupBox>

        <!-- Butonlar -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="StopButton"
                    Content="Durdur"
                    Click="StopButton_Click"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF9800"
                    Foreground="White"
                    FontWeight="Bold"
                    Visibility="Collapsed"/>
            <Button x:Name="CancelButton"
                    Content="İptal"
                    Click="CancelButton_Click"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button x:Name="StartProcessButton"
                    Content="İşlemi Başlat"
                    Click="StartProcessButton_Click"
                    Width="120"
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>




