<Window x:Class="WebScraper.PeriodSelectionModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📅 2025 Dönemlerini Seçin" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700"
        FontFamily="Poppins Regular">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Başlık -->
        <TextBlock Grid.Row="0" 
                   Text="📅 2025 Dönemlerini Seçin" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>
        
        <!-- Bilgi Kutusu -->
        <Border Grid.Row="1" 
                Background="#E3F2FD" 
                BorderBrush="#2196F3" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <TextBlock Text="💡 Bilgi: İstediğiniz dönemleri seçin ve 'İşlemi Başlat' butonuna tıklayın. İptal etmek için 'İptal' butonunu kullanın." 
                       TextWrapping="Wrap" 
                       Foreground="#1565C0"/>
        </Border>
        
        <!-- Dönem Listesi -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Filtreler -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Ay Filtresi -->
                <TextBlock Grid.Column="0" 
                           Text="Ay Filtresi:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1" 
                          x:Name="MonthFilterComboBox" 
                          Width="120" 
                          SelectionChanged="MonthFilterComboBox_SelectionChanged"
                          Margin="0,0,20,0"/>
                
                <!-- Firma Filtresi -->
                <TextBlock Grid.Column="2" 
                           Text="Firma Filtresi:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="3" 
                         x:Name="CompanyFilterTextBox" 
                         Width="120" 
                         TextChanged="CompanyFilterTextBox_TextChanged"
                         Margin="0,0,20,0"
                         ToolTip="Firma adına göre filtrele"/>
                
                <!-- Bölge Filtresi -->
                <TextBlock Grid.Column="4" 
                           Text="Bölge Filtresi:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="5" 
                         x:Name="RegionFilterTextBox" 
                         Width="120" 
                         TextChanged="RegionFilterTextBox_TextChanged"
                         ToolTip="Bölge adına göre filtrele"/>
            </Grid>
            
            <!-- Filtre Sonuç Sayacı -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="FilteredCountText" 
                           Text="0 dönem bulundu" 
                           Foreground="Blue" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"/>
            </StackPanel>
            
            <!-- Başlık ve Butonlar -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Seçilecek Dönemler:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="PeriodCountText" 
                           Text="0 adet" 
                           Foreground="Gray" 
                           VerticalAlignment="Center" 
                           Margin="0,0,20,0"/>
                <Button x:Name="SelectAllButton" 
                        Content="Tümünü Seç" 
                        Click="SelectAllButton_Click" 
                        Margin="0,0,10,0" 
                        Padding="10,5"/>
                <Button x:Name="DeselectAllButton" 
                        Content="Tümünü Kaldır" 
                        Click="DeselectAllButton_Click" 
                        Padding="10,5"/>
            </StackPanel>
            
            <!-- Seçim Sayacı -->
            <TextBlock Grid.Row="3" 
                       x:Name="SelectedCountText" 
                       Text="0 dönem seçildi" 
                       Foreground="Green" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <!-- Checkbox Listesi -->
            <ScrollViewer Grid.Row="4" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="PeriodsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Text}" 
                                      IsChecked="{Binding IsSelected}" 
                                      Margin="0,2" 
                                      FontSize="12"
                                      Checked="PeriodCheckBox_Changed"
                                      Unchecked="PeriodCheckBox_Changed"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        
        <!-- Butonlar -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                    Content="İptal" 
                    Click="CancelButton_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button x:Name="StartButton" 
                    Content="İşlemi Başlat" 
                    Click="StartButton_Click" 
                    Width="100" 
                    Height="30" 
                    Background="#007ACC" 
                    Foreground="White" 
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window> 



