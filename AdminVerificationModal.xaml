<Window x:Class="WebScraper.AdminVerificationModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PIN DoÄŸrulama"
        Height="340"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8FAFF">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BaÅŸlÄ±k -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="ðŸ”’ PIN DoÄŸrulama"
                       FontSize="20"
                       FontFamily="pack://application:,,,/Fonts/Poppins-SemiBold.ttf#Poppins"
                       Foreground="#1E293B"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Bu iÅŸlemi gerÃ§ekleÅŸtirmek iÃ§in PIN kodunu girin."
                       FontSize="14"
                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                       Foreground="#64748B"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,24">
            <TextBlock Text="PIN Kodu"
                       FontSize="13"
                       FontFamily="pack://application:,,,/Fonts/Poppins-Medium.ttf#Poppins"
                       Foreground="#475569"
                       Margin="0,0,0,8"/>
            <Border Background="#FFFFFF"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="0">
                <PasswordBox x:Name="txtPinCode"
                             Padding="12,10"
                             FontSize="16"
                             FontFamily="pack://application:,,,/Fonts/Poppins-Medium.ttf#Poppins"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxLength="10"
                             KeyDown="txtPinCode_KeyDown"/>
            </Border>

            <TextBlock x:Name="txtErrorMessage"
                       Text=""
                       FontSize="12"
                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                       Foreground="#EF4444"
                       Margin="0,12,0,0"
                       Visibility="Collapsed"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                    Content="Ä°ptal"
                    Background="#94A3B8"
                    Foreground="White"
                    Width="100"
                    Height="40"
                    Margin="0,0,10,0"
                    Padding="12,8"
                    BorderThickness="0"
                    FontSize="14"
                    FontFamily="pack://application:,,,/Fonts/Poppins-Medium.ttf#Poppins"
                    Cursor="Hand"
                    Click="btnCancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#64748B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnVerify"
                    Content="DoÄŸrula"
                    Background="#2196F3"
                    Foreground="White"
                    Width="100"
                    Height="40"
                    Padding="12,8"
                    BorderThickness="0"
                    FontSize="14"
                    FontFamily="pack://application:,,,/Fonts/Poppins-Medium.ttf#Poppins"
                    Cursor="Hand"
                    Click="btnVerify_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

