<Window x:Class="WebScraper.PDKSMatchingModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebScraper"
        mc:Ignorable="d"
        Title="PDKS Personel EÅŸleÅŸtirme" Height="860" Width="1320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins">

    <Window.Resources>
        <local:BooleanToYesNoConverter x:Key="BooleanToYesNoConverter"/>
        <Style x:Key="ModalButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MatchedUnmatchedRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMatched}" Value="True">
                    <Setter Property="Background" Value="#E8F5E8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMatched}" Value="False">
                    <Setter Property="Background" Value="#FFEBEE"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BaÅŸlÄ±k -->
        <Border Grid.Row="0"
                Background="#FFF9C4"
                CornerRadius="8"
                Padding="20"
                Margin="20,20,20,15"
                BorderBrush="#FFEB3B"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ” PDKS Personel EÅŸleÅŸtirme"
                               FontSize="18"
                               FontFamily="pack://application:,,,/Fonts/Poppins-SemiBold.ttf#Poppins"
                               Foreground="#F57F17"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="PDKS verilerindeki personeller ile Vio ÅŸablonundaki personeller karÅŸÄ±laÅŸtÄ±rÄ±lÄ±yor."
                               FontSize="14"
                               FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                               Foreground="#424242"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Ä°statistikler -->
                <Border Grid.Column="1"
                        Background="#E8F5E8"
                        CornerRadius="6"
                        Padding="10"
                        Margin="10,0,10,0"
                        BorderBrush="#4CAF50"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="âœ… EÅŸleÅŸen"
                                   FontSize="12"
                                   FontFamily="pack://application:,,,/Fonts/Poppins-SemiBold.ttf#Poppins"
                                   Foreground="#2E7D32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtMatchedCount"
                                   Text="0"
                                   FontSize="16"
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   Foreground="#2E7D32"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2"
                        Background="#FFEBEE"
                        CornerRadius="6"
                        Padding="10"
                        Margin="0,0,0,0"
                        BorderBrush="#F44336"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="âŒ EÅŸleÅŸmeyen"
                                   FontSize="12"
                                   FontFamily="pack://application:,,,/Fonts/Poppins-SemiBold.ttf#Poppins"
                                   Foreground="#C62828"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtUnmatchedCount"
                                   Text="0"
                                   FontSize="16"
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   Foreground="#C62828"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Personel Listesi -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Margin="20,0,20,20"
                BorderBrush="#E9ECEF"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- BaÅŸlÄ±k -->
                <TextBlock Grid.Row="0"
                           Text="ðŸ‘¥ PDKS Personelleri"
                           FontSize="16"
                           FontFamily="pack://application:,,,/Fonts/Poppins-SemiBold.ttf#Poppins"
                           Foreground="#495057"
                           Margin="20,15,20,15"/>

                <!-- DataGrid -->
                <DataGrid x:Name="dgPDKSMatching"
                          Grid.Row="1"
                          Margin="20,0,20,20"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          Background="White"
                          BorderBrush="#DEE2E6"
                          BorderThickness="1"
                          RowHeight="42"
                          ColumnWidth="*"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F8F9FA"
                          RowStyle="{StaticResource MatchedUnmatchedRowStyle}"
                          HorizontalScrollBarVisibility="Hidden">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PDKS Sicil"
                                            Binding="{Binding PersonnelCode}"
                                            Width="1.2*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="PDKS AdÄ±"
                                            Binding="{Binding Name}"
                                            Width="2.2*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="KayÄ±t SayÄ±sÄ±"
                                            Binding="{Binding TotalRecords}"
                                            Width="1.2*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="EÅŸleÅŸme Durumu"
                                            Binding="{Binding IsMatched, Converter={StaticResource BooleanToYesNoConverter}}"
                                            Width="1.4*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="EÅŸleÅŸme Tipi"
                                            Binding="{Binding MatchType}"
                                            Width="1.4*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="Vio Sicil"
                                            Binding="{Binding MatchedPersonnelCode}"
                                            Width="1.2*"
                                            FontSize="14"/>
                        <DataGridTextColumn Header="Vio AdÄ±"
                                            Binding="{Binding MatchedPersonnelName}"
                                            Width="2.2*"
                                            FontSize="14"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Butonlar -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="txtSummary"
                       Text="Toplam 0 personel bulundu"
                       FontSize="14"
                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                       Foreground="#6C757D"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    x:Name="btnConfirm"
                    Style="{StaticResource ModalButton}"
                    Width="220"
                    Height="40"
                    Click="btnConfirm_Click">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="EÅŸleÅŸtirmeyi Tamamla" VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Window>
