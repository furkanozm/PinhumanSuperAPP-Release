<Window x:Class="WebScraper.TotpInfoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TOTP Secret Nasıl Edinilir?" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="ModalButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🔐 TOTP Secret Nasıl Edinilir?" 
                           FontSize="20" 
                           FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                           FontWeight="Normal" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="İki faktörlü doğrulama için TOTP secret kodunu nasıl alacağınızı öğrenin" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Step 1 -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="1️⃣ QR Kod Edinme" 
                                   FontSize="16" 
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   FontWeight="Normal" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• Sistem içinde TOTP QR kodunu bulun" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Genellikle profil ayarları veya güvenlik bölümünde yer alır" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• 'İki faktörlü doğrulama' veya '2FA' seçeneğini arayın" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                
                <!-- Step 2 -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="2️⃣ QR Kodu Tarama" 
                                   FontSize="16" 
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   FontWeight="Normal" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• Google Authenticator uygulamasını açın" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• '+' butonuna tıklayın ve 'QR kod tarama' seçin" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Veya 'Manuel giriş' seçeneğini kullanın" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                
                <!-- Step 3 -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="3️⃣ Secret Kodu Alma" 
                                   FontSize="16" 
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   FontWeight="Normal" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• Google Authenticator'da hesabınızı açın" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• 'Ayarlar' veya 'Düzenle' seçeneğine tıklayın" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• 'Secret' veya 'Anahtar' kısmındaki kodu kopyalayın" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Right Column -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- Step 4 -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="4️⃣ Kodu Yapıştırma" 
                                   FontSize="16" 
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   FontWeight="Normal" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• Kopyaladığınız secret kodunu buraya yapıştırın" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Kod genellikle 32 karakter uzunluğundadır" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Örnek: GQ2DCZBYGRRGILLGMI4TELJUMMYGCLJZ" 
                                   Margin="0,0,0,5"
                                   FontFamily="Consolas"
                                   Background="#F0F0F0"
                                   Padding="5"/>
                    </StackPanel>
                </Border>
                
                <!-- Important Note -->
                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text=" Önemli Notlar" 
                                   FontSize="16" 
                                   FontFamily="pack://application:,,,/Fonts/Poppins-Bold.ttf#Poppins"
                                   FontWeight="Normal" 
                                   Foreground="#E65100"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="• TOTP secret kodunu kimseyle paylaşmayın" 
                                   Margin="0,0,0,5"
                                   Foreground="#E65100"/>
                        <TextBlock Text="• Kod güvenli bir yerde saklanmalıdır" 
                                   Margin="0,0,0,5"
                                   Foreground="#E65100"/>
                        <TextBlock Text="• Kod kaybolursa sistem yöneticisi ile iletişime geçin" 
                                   Margin="0,0,0,5"
                                   Foreground="#E65100"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" 
                        Content="Kapat" 
                        Style="{StaticResource ModalButton}"
                        Width="100"
                        Click="btnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 



