<Window x:Class="WebScraper.ManualSendModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manuel Gönderim" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#E0E0E0">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" 
                                                BorderThickness="0">
                                            <Path x:Name="Arrow"
                                                  Fill="Black"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0"
                                            CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Bold GroupBox Header Style -->
        <Style x:Key="BoldGroupBoxHeader" TargetType="GroupBox">
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Modern TabControl Style -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" 
                                       Panel.ZIndex="1" 
                                       Background="Transparent" 
                                       IsItemsHost="True"/>
                            <Border Grid.Row="1" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TabItem Style -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6,6,0,0" 
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,2,0"
                                Cursor="Hand">
                            <ContentPresenter ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#2196F3"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text=" Mail Gönderimi" 
                       FontSize="18" 
                       FontWeight="Normal" 
                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Klasör içindeki dosyaları analiz edip keyword eşleşmesine göre mail gönderimi yapın." 
                       FontSize="11" 
                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                       Foreground="#666666" 
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Main Content -->
        <TabControl x:Name="tabControl" Grid.Row="1" Style="{StaticResource ModernTabControl}">
            <!-- Mail Gönderimi Tab -->
            <TabItem Header=" Mail Gönderimi" Style="{StaticResource ModernTabItem}">
                <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sol Panel - Klasör Analizi -->
            <GroupBox Grid.Column="0" Header="📁 Klasör Analizi" Style="{StaticResource BoldGroupBoxHeader}">
                <StackPanel>
                    <!-- Klasör Seçimi -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtFolderPath" 
                                 Grid.Column="0"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"
                                 Margin="0,0,8,0"
                                 Height="28"
                                 Padding="0"
                                 ToolTip="Analiz edilecek klasör yolu"/>
                        
                        <Button x:Name="btnSelectFolder" 
                                Grid.Column="1"
                                Content="📁 Seç" 
                                Style="{StaticResource ModernButton}"
                                Background="#FF9800"
                                Height="28"
                                Padding="8,4"
                                Click="btnSelectFolder_Click"/>
                    </Grid>
                    
                    <!-- Tarih Seçimi -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                                <!-- Tarih Seçimi -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0">
                                    <TextBlock Text="📅 Tarih Seçimi:" 
                                       FontSize="11" 
                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                       Margin="0,0,0,3"/>
                                    <DatePicker x:Name="dpSelectedDate" 
                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                       FontSize="12"
                                       Height="28"/>
                        </StackPanel>
                        
                                <!-- Ödeme Emri Oluşturan Dropdown -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                                    <TextBlock Text="💰 Ödeme Emri Oluşturan Seçimi:" 
                                      FontSize="12"
                                      FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                               Margin="0,0,0,5"/>
                                    <ComboBox x:Name="cmbPaymentOrderCreator" 
                                              Style="{StaticResource ModernComboBox}"
                                              Height="28"
                                      Margin="0,0,0,5"
                                              ToolTip="Klasör isimlerinden ödeme emri oluşturanı seçin"
                                              SelectionChanged="cmbPaymentOrderCreator_SelectionChanged"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Ödeme Emri Oluşturanlar -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Background="#FAFAFA" 
                                    Padding="12" 
                                    Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="👥 Ödeme Emri Oluşturanlar:" 
                                               FontWeight="Normal" 
                                      FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                               FontSize="13"
                                               Margin="0,0,0,8"/>
                                    
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                                        <StackPanel x:Name="spPaymentOrderCreators">
                                            <!-- Ödeme emri oluşturanlar buraya eklenecek -->
                                        </StackPanel>
                                    </ScrollViewer>
                        </StackPanel>
                            </Border>
                    
                    <!-- Analiz Butonu -->
                    <Button x:Name="btnAnalyzeFolder" 
                            Content="🔍 Klasörü Analiz Et" 
                            Style="{StaticResource ModernButton}"
                            Background="#2196F3"
                            Margin="0,0,0,10"
                            Height="32"
                            Click="btnAnalyzeFolder_Click"/>
                    
                    <!-- Analiz Sonuçları -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Background="#FAFAFA" 
                                    Padding="12" 
                                    Margin="0,0,0,10">
                                <StackPanel>
                    <TextBlock Text=" Analiz Sonuçları:" 
                               FontWeight="Normal" 
                               FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                               FontSize="13"
                               Margin="0,0,0,8"/>
                    
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" 
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  MaxHeight="250"
                                                  CanContentScroll="True">
                        <StackPanel x:Name="spAnalysisResults">
                            <!-- Analiz sonuçları buraya eklenecek -->
                        </StackPanel>
                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                </StackPanel>
            </GroupBox>
            
                    <!-- Orta Ayırıcı kaldırıldı -->
            
            <!-- Sağ Panel - Gönderim -->
                    <GroupBox Grid.Column="2" Header=" Mail Gönderimi" Style="{StaticResource BoldGroupBoxHeader}" Margin="10,0,0,0">
                <StackPanel>
                    <!-- Keyword Seçimi -->
                            <TextBlock Text="🔍 Mail Gönderilecek Keyword'ler:" 
                               FontWeight="Normal" 
                               FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                               Margin="0,0,0,8"/>
                    
                    <!-- Filtre Kutusu -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtFilter" 
                                 Grid.Column="0"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,8,0"
                                 Height="28"
                                 Padding="8,6"
                                 FontSize="12"
                                 ToolTip="Keyword'e göre filtrele"
                                 TextChanged="txtFilter_TextChanged"/>
                        
                        <Button x:Name="btnClearFilter" 
                                Grid.Column="1"
                                Content="❌" 
                                Style="{StaticResource ModernButton}"
                                Background="#757575"
                                Height="28"
                                Width="28"
                                Padding="0"
                                FontSize="12"
                                Click="btnClearFilter_Click"
                                ToolTip="Filtreyi temizle"/>
                    </Grid>
                    
                    <!-- Hazır Filtre Butonları -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="btnFilterHasFiles" 
                                Content="📁 Dosya Var" 
                                Style="{StaticResource ModernButton}"
                                Background="#2196F3"
                                Height="28"
                                Margin="0,0,8,0"
                                Padding="12,4"
                                FontSize="11"
                                Click="btnFilterHasFiles_Click"
                                ToolTip="Sadece dosyası olan keyword'leri göster"/>
                        
                        <Button x:Name="btnFilterNoFiles" 
                                Content="📂 Dosya Yok" 
                                Style="{StaticResource ModernButton}"
                                Background="#FF9800"
                                Height="28"
                                Margin="0,0,8,0"
                                Padding="12,4"
                                FontSize="11"
                                Click="btnFilterNoFiles_Click"
                                ToolTip="Sadece dosyası olmayan keyword'leri göster"/>
                        
                        <Button x:Name="btnFilterAll" 
                                Content="🔍 Tümü" 
                                Style="{StaticResource ModernButton}"
                                Background="#4CAF50"
                                Height="28"
                                Padding="12,4"
                                FontSize="11"
                                Click="btnFilterAll_Click"
                                ToolTip="Tüm keyword'leri göster"/>
                        
                        <Button x:Name="btnUpdateSentStatus" 
                                Content=" Durumu Güncelle" 
                                Style="{StaticResource ModernButton}"
                                Background="#9C27B0"
                                Height="28"
                                Margin="8,0,0,0"
                                Padding="12,4"
                                FontSize="11"
                                Click="btnUpdateSentStatus_Click"
                                ToolTip="Dosya gönderim durumlarını güncelle"/>
                    </StackPanel>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="180">
                                <StackPanel x:Name="spKeywordSelection"/>
                    </ScrollViewer>
                    
                            <!-- Toplu Seçim Butonları -->
                            <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="btnSelectAll" 
                                        Grid.Column="0"
                                Content=" Tümünü Seç" 
                                Style="{StaticResource ModernButton}"
                                Background="#4CAF50"
                                        Height="28"
                                        Margin="0,0,5,0"
                                Click="btnSelectAll_Click"/>
                        
                        <Button x:Name="btnDeselectAll" 
                                        Grid.Column="1"
                                Content="❌ Tümünü Kaldır" 
                                Style="{StaticResource ModernButton}"
                                Background="#F44336"
                                        Height="28"
                                        Margin="5,0,0,0"
                                Click="btnDeselectAll_Click"/>
                            </Grid>
                            
                            <!-- Boşluk -->
                            <Rectangle Height="20" Fill="Transparent"/>
                        
                            <!-- Gönderim Butonları -->
                        <Button x:Name="btnSendMails" 
                                Content="📤 Seçili Mail'leri Gönder" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#4CAF50"
                                    Height="32"
                                    Margin="0,0,0,10"
                                Click="btnSendMails_Click"/>
                            
                            <!-- Üstteki SMS butonu kaldırıldı -->
                </StackPanel>
            </GroupBox>
        </Grid>
            </TabItem>
            
            <!-- SMS Alıcıları Tab -->
            <TabItem Header=" SMS Alıcıları" Style="{StaticResource ModernTabItem}">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- SMS Alıcıları Header -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text=" SMS Alıcıları" 
                                           FontSize="14" 
                                           FontWeight="Normal" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
                                <TextBlock Text="Seçili dönemler için SMS alıcıları listesi" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#666666"/>
                            </StackPanel>
                            
                            <Button x:Name="btnRefreshSmsRecipients" 
                                    Grid.Column="1"
                                    Content=" Yenile" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#2196F3"
                                    Height="28"
                                    Margin="0,0,8,0"
                                    Click="btnRefreshSmsRecipients_Click"/>
                            
                            <Button x:Name="btnSendSms" 
                                    Grid.Column="2"
                                    Content=" SMS Gönder" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#4CAF50"
                                    Height="28"
                                    Click="btnSendSms_Click"/>
                        </Grid>
                    </Border>
                    
                    <!-- SMS Alıcıları Content -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <TabControl x:Name="smsRecipientsTabControl" Style="{StaticResource ModernTabControl}">
                            <!-- Benzersiz Alıcılar Tab -->
                            <TabItem Header="👥 Benzersiz Alıcılar" Style="{StaticResource ModernTabItem}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Benzersiz Alıcılar Header -->
                                    <Border Grid.Row="0" 
                                            Background="#E8F5E9" 
                                            CornerRadius="6" 
                                            Padding="10" 
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text=" Benzersiz Alıcılar" 
                                                       FontSize="12" 
                                                       FontWeight="Normal" 
                                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                                       Foreground="#2E7D32"/>
                                            <TextBlock x:Name="txtUniqueRecipientsCount" 
                                                       Text="0 alıcı" 
                                                       FontSize="11" 
                                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                                       Foreground="#388E3C"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Benzersiz Alıcılar List -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ListView x:Name="lstUniqueRecipients" 
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="5,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <CheckBox Grid.Column="0" 
                                                                  IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                                  Margin="0,0,10,0"
                                                                  VerticalAlignment="Center"/>
                                                        
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontWeight="Normal" 
                                                                       FontSize="12"
                                                                       Foreground="#333"
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <Border Background="#E8F5E9" 
                                                                    BorderBrush="#4CAF50" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="4" 
                                                                    Padding="6,2" 
                                                                    Margin="8,0,0,0">
                                                                <TextBlock Text="{Binding FormattedPhone}" 
                                                                           FontWeight="Medium" 
                                                                           FontSize="11"
                                                                           Foreground="#2E7D32"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                        </StackPanel>
                                                        
                                                        <Border Grid.Column="2" 
                                                                Background="#E3F2FD" 
                                                                BorderBrush="#2196F3" 
                                                                BorderThickness="1" 
                                                                CornerRadius="4" 
                                                                Padding="8,3">
                                                            <TextBlock Text="{Binding PeriodName}" 
                                                                       FontWeight="Medium" 
                                                                       FontSize="10"
                                                                       Foreground="#1976D2"
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                            
                            <!-- Tekrar Eden Alıcılar Tab -->
                            <TabItem Header=" Tekrar Eden Alıcılar" Style="{StaticResource ModernTabItem}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Tekrar Eden Alıcılar Header -->
                                    <Border Grid.Row="0" 
                                            Background="#FFF3E0" 
                                            CornerRadius="6" 
                                            Padding="10" 
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text=" Tekrar Eden Alıcılar" 
                                                       FontSize="12" 
                                                       FontWeight="Normal" 
                                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                                       Foreground="#E65100"/>
                                            <TextBlock x:Name="txtDuplicateRecipientsCount" 
                                                       Text="0 alıcı" 
                                                       FontSize="11" 
                                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                                       Foreground="#F57C00"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Tekrar Eden Alıcılar List -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ListView x:Name="lstDuplicateRecipients" 
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="5,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <CheckBox Grid.Column="0" 
                                                                  IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                                  Margin="0,0,10,0"
                                                                  VerticalAlignment="Center"/>
                                                        
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Text="" 
                                                                       FontSize="12"
                                                                       Margin="0,0,5,0"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontWeight="Normal" 
                                                                       FontSize="12"
                                                                       Foreground="#E65100"
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <Border Background="#E8F5E9" 
                                                                    BorderBrush="#4CAF50" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="4" 
                                                                    Padding="6,2" 
                                                                    Margin="8,0,0,0">
                                                                <TextBlock Text="{Binding FormattedPhone}" 
                                                                           FontWeight="Medium" 
                                                                           FontSize="11"
                                                                           Foreground="#2E7D32"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                        </StackPanel>
                                                        
                                                        <Border Grid.Column="2" 
                                                                Background="#FFF3E0" 
                                                                BorderBrush="#FF9800" 
                                                                BorderThickness="1" 
                                                                CornerRadius="4" 
                                                                Padding="8,3">
                                                            <TextBlock Text="{Binding PeriodName}" 
                                                                       FontWeight="Medium" 
                                                                       FontSize="10"
                                                                       Foreground="#E65100"
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                    
                    <!-- SMS Alıcıları Statistics -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="8" 
                            Padding="10" 
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text=" SMS Alıcıları İstatistikleri" 
                                       FontSize="12" 
                                       FontWeight="Normal" 
                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                       Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock x:Name="txtTotalSmsRecipients" 
                                           Grid.Column="0"
                                           Text="Toplam: 0" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#666666"/>
                                
                                <TextBlock x:Name="txtSelectedSmsRecipients" 
                                           Grid.Column="1"
                                           Text="Seçili: 0" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#2196F3"/>
                                
                                <TextBlock x:Name="txtUniqueSmsRecipients" 
                                           Grid.Column="2"
                                           Text="Benzersiz: 0" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#4CAF50"/>
                                
                                <TextBlock x:Name="txtDuplicateSmsRecipients" 
                                           Grid.Column="3"
                                           Text="Tekrar: 0" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#FF9800"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Loglar Tab -->
            <TabItem Header=" Loglar" Style="{StaticResource ModernTabItem}">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log Header -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text=" Sistem Logları" 
                                           FontSize="14" 
                                           FontWeight="Normal" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"/>
                                <TextBlock Text="Manuel gönderim işlemlerinin detaylı logları" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#666666"/>
                            </StackPanel>
                            
                            <Button x:Name="btnClearLog" 
                                    Grid.Column="1"
                                    Content="🗑️ Temizle" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#FF5722"
                                    Height="28"
                                    Margin="0,0,8,0"
                                    Click="btnClearLog_Click"/>
                            
                            <Button x:Name="btnExportLog" 
                                    Grid.Column="2"
                                    Content="💾 Dışa Aktar" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#2196F3"
                                    Height="28"
                                    Click="btnExportLog_Click"/>
                        </Grid>
                    </Border>
                    
                    <!-- Log Content -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="txtLog" 
                                     IsReadOnly="True" 
                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins" 
                           FontSize="11" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     Padding="10"
                           TextWrapping="Wrap"
                                     VerticalAlignment="Stretch"/>
            </ScrollViewer>
                    </Border>
                    
                    <!-- Log Statistics -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="8" 
                            Padding="10" 
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text=" Log İstatistikleri" 
                                       FontSize="12" 
                                       FontWeight="Normal" 
                                       FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                       Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock x:Name="txtLogLineCount" 
                                           Grid.Column="0"
                                           Text="0 satır" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#666666"/>
                                
                                <TextBlock x:Name="txtLogErrorCount" 
                                           Grid.Column="1"
                                           Text="0 hata" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#F44336"/>
                                
                                <TextBlock x:Name="txtLogWarningCount" 
                                           Grid.Column="2"
                                           Text="0 uyarı" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#FF9800"/>
                                
                                <TextBlock x:Name="txtLogSuccessCount" 
                                           Grid.Column="3"
                                           Text="0 başarı" 
                                           FontSize="11" 
                                           FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                                           Foreground="#4CAF50"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnClose" 
                    Content="❌ Kapat" 
                    Style="{StaticResource ModernButton}"
                    Background="#757575"
                    Height="32"
                    Padding="20,8"
                    Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window> 


