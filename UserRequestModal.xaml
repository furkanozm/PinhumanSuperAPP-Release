<Window x:Class="WebScraper.UserRequestModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kullanıcı Talebi" 
        Height="600" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
                 <Style x:Key="ModernTextBox" TargetType="TextBox">
             <Setter Property="Padding" Value="6,4"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="BorderBrush" Value="#E0E0E0"/>
             <Setter Property="Background" Value="White"/>
             <Setter Property="FontSize" Value="14"/>
             <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
         <Border Background="White" 
             CornerRadius="15" 
             BorderBrush="#E0E0E0" 
             BorderThickness="2"
             Effect="{x:Null}"
             MouseLeftButtonDown="Window_MouseLeftButtonDown">
        
                 <Grid Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- User Request Icon -->
                <Border Grid.Column="0" 
                        Background="#2196F3" 
                        Width="60" 
                        Height="60" 
                        CornerRadius="30"
                        Margin="0,0,20,0">
                    <TextBlock Text="👤" 
                               FontSize="30" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </Border>
                
                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Kullanıcı Talebi" 
                               FontSize="20" 
                               FontFamily="pack://application:,,,/Fonts/Poppins-Regular.ttf#Poppins"
                               Foreground="#333333"
                               FontWeight="Normal"/>
                    <TextBlock Text="Kullanıcı hesabı oluşturmak için bilgilerinizi girin" 
                               FontSize="14" 
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button Grid.Column="2" 
                        Content="✕" 
                        Width="30" 
                        Height="30" 
                        Background="Transparent"
                        Foreground="#999999"
                        BorderThickness="0"
                        FontSize="16"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" 
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    
                                         <!-- Form Fields -->
                     <StackPanel Margin="0,0,0,20">
                        
                        <!-- Email -->
                        <TextBlock Text=" Email Adresi" 
                                   FontSize="14" 
                                   Foreground="#333333" 
                                   FontWeight="Normal"
                                   Margin="0,0,0,4"/>
                                                 <TextBox x:Name="txtEmail" 
                                  Style="{StaticResource ModernTextBox}"
                                  Margin="0,0,0,6"
                                  Text=""/>
                        
                        <!-- Ad Soyad -->
                        <TextBlock Text="👤 Ad Soyad" 
                                   FontSize="14" 
                                   Foreground="#333333" 
                                   FontWeight="Normal"
                                   Margin="0,0,0,4"/>
                                                 <TextBox x:Name="txtFullName" 
                                  Style="{StaticResource ModernTextBox}"
                                  Margin="0,0,0,6"
                                  Text=""/>
                        
                        <!-- GSM -->
                        <TextBlock Text=" GSM Numarası" 
                                   FontSize="14" 
                                   Foreground="#333333" 
                                   FontWeight="Normal"
                                   Margin="0,0,0,4"/>
                                                 <TextBox x:Name="txtPhone" 
                                  Style="{StaticResource ModernTextBox}"
                                  Margin="0,0,0,6"
                                  Text=""/>
                        
                        <!-- Açıklama -->
                        <TextBlock Text="📝 Açıklama (Opsiyonel)" 
                                   FontSize="14" 
                                   Foreground="#333333" 
                                   FontWeight="Normal"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtDescription" 
                                 Style="{StaticResource ModernTextBox}"
                                 Height="50"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Text=""/>
                        
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
                         <!-- Footer -->
             <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <!-- Divider Line -->
                <Border Height="1" 
                        Background="#E0E0E0" 
                        Margin="0,0,0,20" 
                        HorizontalAlignment="Stretch"/>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    
                    <Button x:Name="btnCancel" 
                            Content="❌ İptal" 
                            Background="#757575"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontWeight="Normal"
                            Cursor="Hand"
                            Height="45"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border" 
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="ContentPresenter" 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#616161"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btnSubmit" 
                            Content=" Talebi Gönder" 
                            Style="{StaticResource ModernButton}"
                            Background="#4CAF50"
                            Click="SubmitRequest_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>



